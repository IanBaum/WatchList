<!-- set up form to authenticate user logins -->
<form {{action 'authenticate' on='submit'}}>
  <p>{{input id='identification' placeholder='Email' value=identification}}</p>
  <p>{{input id='password' placeholder='Password' type='password' value=password}}</p>
  <button type="submit">LOGIN</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>
