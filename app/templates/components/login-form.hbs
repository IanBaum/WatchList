<!-- set up form to authenticate user logins -->
<form {{action 'authenticate' on='submit'}}>
  {{input id='identification' placeholder='Enter Your Email Address' value=identification}}
  {{input id='password' placeholder='Enter Your Password' type='password' value=password}}
  <button type="submit">Login</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
</form>
